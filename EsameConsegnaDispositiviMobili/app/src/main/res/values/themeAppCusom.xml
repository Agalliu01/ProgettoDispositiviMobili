<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Definizione dei colori -->

    <color name="primary_dark_color">#0D47A1</color> <!-- Blu scuro per il colore primario -->
    <color name="accent_color">#1E88E5</color> <!-- Blu chiaro per l'accento -->
    <color name="black">#FF000000</color> <!-- Nero -->
    <color name="white">#FFFFFFFF</color> <!-- Bianco -->
    <color name="red_outline">#FF0000</color> <!-- Rosso per il contorno -->
    <color name="black_text">#000000</color> <!-- Nero per il testo -->
    <color name="custom_button_color">#FF5722</color> <!-- Colore personalizzato per i pulsanti -->
    <color name="button_border_color">#FFC107</color> <!-- Colore del bordo del pulsante -->

    <!-- Tema base -->
    <style name="AppTheme" parent="Theme.Design.Light">
        <!-- Colori principali -->
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="colorAccent">@color/accent_color</item>

        <!-- Altri attributi per i bordi e transizioni -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowSharedElementsUseOverlay">true</item>
        <item name="android:windowEnterTransition">@android:transition/explode</item>
        <item name="android:windowExitTransition">@android:transition/explode</item>
        <item name="android:windowReenterTransition">@android:transition/explode</item>
        <item name="android:windowReturnTransition">@android:transition/explode</item>

        <!-- Impostazioni per i pulsanti -->
        <item name="colorButtonNormal">@color/accent_color</item>
        <item name="colorControlHighlight">@color/button_border_color</item> <!-- Colore per il bordo quando premuto -->
    </style>

    <!-- Tema scuro -->
    <style name="AppTheme.Dark" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Colori principali per il tema scuro -->
        <item name="colorPrimaryDark">@color/black</item> <!-- Rosso scuro per il colore primario -->
        <item name="colorAccent">#13386E</item> <!-- Nero per l'accento -->

        <!-- Attributi per i bordi -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowSharedElementsUseOverlay">true</item>
        <item name="android:windowEnterTransition">@android:transition/explode</item>
        <item name="android:windowExitTransition">@android:transition/explode</item>
        <item name="android:windowReenterTransition">@android:transition/explode</item>
        <item name="android:windowReturnTransition">@android:transition/explode</item>

        <!-- Impostazioni per i pulsanti -->
        <item name="colorButtonNormal">#22FF2D</item>
        <item name="colorControlHighlight">@color/primary_dark_color</item> <!-- Colore per il bordo quando premuto -->
    </style>

</resources>
