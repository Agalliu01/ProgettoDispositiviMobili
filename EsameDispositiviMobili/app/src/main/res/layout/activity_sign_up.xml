<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Titolo "Registrazione" -->
        <TextView
            android:id="@+id/titoloTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrazione"
            android:textSize="40sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingTop="24dp"
            android:paddingBottom="16dp"
            android:background="#1E88E5"
            android:textColor="@android:color/white" />

        <!-- Nome -->
        <EditText
            android:id="@+id/nomeEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titoloTextView"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:textColor="#1E88E5"
            android:textColorHint="#1E88E5"
            android:hint="Nome"
            android:inputType="textPersonName" />

        <!-- Cognome -->
        <EditText
            android:id="@+id/cognomeEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nomeEditText"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:textColor="#1E88E5"
            android:textColorHint="#1E88E5"
            android:layout_marginEnd="24dp"
            android:hint="Cognome"
            android:inputType="textPersonName" />

        <!-- Username -->
        <EditText
            android:id="@+id/usernameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cognomeEditText"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:textColor="#1E88E5"
            android:textColorHint="#1E88E5"
            android:layout_marginEnd="24dp"
            android:hint="Username"
            android:inputType="text" />

        <!-- Email -->
        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/usernameEditText"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:textColor="#1E88E5"
            android:textColorHint="#1E88E5"
            android:layout_marginEnd="24dp"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <!-- Password -->
        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/emailEditText"
            android:layout_marginStart="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:textColor="#1E88E5"
            android:textColorHint="#1E88E5"
            android:hint="Password"
            android:inputType="textPassword" />

        <!-- Icona per mostrare/nascondere password -->
        <ImageView
            android:id="@+id/showPassword1ImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/passwordEditText"
            android:layout_alignBottom="@id/passwordEditText"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/icons8_visibile_30" />

        <!-- Conferma Password -->
        <EditText
            android:id="@+id/confermaPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/passwordEditText"
            android:layout_marginStart="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:textColor="#1E88E5"
            android:textColorHint="#1E88E5"
            android:hint="Conferma Password"
            android:inputType="textPassword" />

        <!-- Icona per mostrare/nascondere conferma password -->
        <ImageView
            android:id="@+id/showPassword2ImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/confermaPasswordEditText"
            android:layout_alignEnd="@id/confermaPasswordEditText"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="15dp"

            android:src="@drawable/icons8_visibile_30" />

        <!-- Pulsante di registrazione -->
        <Button
            android:id="@+id/registratiButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/confermaPasswordEditText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:textColor="@android:color/white"
            android:background="@color/black"
            android:text="Registrazione" />

        <!-- Ultima TextView -->
        <TextView
            android:id="@+id/loginMover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_below="@id/registratiButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Hai giÃ  un account? Accedi qui" />

    </RelativeLayout>

</ScrollView>
